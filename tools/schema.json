            "type": "array",
            "items": { "type": "string" }
          },
          "keywords": {
            "type": "array",
            "items": { "type": "string" }
          },
          "startDate": { "type": "string" },
          "endDate": { "type": "string" },
          "url": { "type": "string" },
          "roles": {
            "type": "array",
