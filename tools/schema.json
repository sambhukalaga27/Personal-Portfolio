          },
          "entity": { "type": "string" },
          "type": { "type": "string" }
        }
      }
    },
    "awards": {
      "type": "array",
      "items": {
        "type": "object",
        "properties": {
          "title": { "type": "string" },
          "date": { "type": "string" },
          "awarder": { "type": "string" },
          "summary": { "type": "string" }
        }
      }
    }
